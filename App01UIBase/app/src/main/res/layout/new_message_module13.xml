<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/new_message_module">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageview_simple"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_description"
        android:layout_toRightOf="@+id/imageview_simple"
        android:textSize="12sp"
        android:textColor="#ff0000"
        android:text="새 메시지 도착함"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_description"
        android:layout_alignLeft="@+id/textview_description"
        android:layout_alignBaseline="@+id/imageview_simple"
        android:textSize="20sp"
        android:text="안녕하세요"/>

    <android.widget.Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="내용보기"/>
</RelativeLayout>